<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@drawable/side_nav_bar"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@mipmap/wqp_round" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="@string/nav_header_title"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="首頁"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/WQP_Blue"
                    android:background="@drawable/underline_3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="40dp"
                    android:paddingBottom="2dp"
                    android:gravity="bottom|left"
                    android:text="總經理室"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/WQP_Gray"
                    android:background="@drawable/underline_3dp"/>

                <LinearLayout
                    android:id="@+id/menu_boss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/exchange_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="換貨申請單"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="40dp"
                    android:paddingBottom="2dp"
                    android:gravity="bottom|left"
                    android:text="工務部"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/WQP_Gray"
                    android:background="@drawable/underline_3dp"/>

                <LinearLayout
                    android:id="@+id/menu_engineer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/schedule_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="行程資訊"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                    <TextView
                        android:id="@+id/calendar_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="派工行事曆"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                    <TextView
                        android:id="@+id/mission_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="派工任務"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                    <TextView
                        android:id="@+id/bonus_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="點數總覽"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                    <TextView
                        android:id="@+id/points_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="點數明細"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/engineer_manager_txt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="40dp"
                    android:paddingBottom="2dp"
                    android:gravity="bottom|left"
                    android:text="工務部(主管)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/WQP_Gray"
                    android:background="@drawable/underline_3dp"/>

                <LinearLayout
                    android:id="@+id/menu_engineer_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/miss_report_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="各區未回報數量"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                    <TextView
                        android:id="@+id/gps_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="工務打卡GPS"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="40dp"
                    android:paddingBottom="2dp"
                    android:gravity="bottom|left"
                    android:text="業務部"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/WQP_Gray"
                    android:background="@drawable/underline_3dp"/>

                <LinearLayout
                    android:id="@+id/menu_sales_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/quotation_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="報價單審核"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="40dp"
                    android:paddingBottom="2dp"
                    android:gravity="bottom|left"
                    android:text="百貨/DIY通路部"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/WQP_Gray"
                    android:background="@drawable/underline_3dp"/>

                <LinearLayout
                    android:id="@+id/menu_diy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/report_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="日報上傳"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                    <TextView
                        android:id="@+id/report_search_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="日報查詢/修正"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="40dp"
                    android:paddingBottom="2dp"
                    android:gravity="bottom|left"
                    android:text="管理部"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/WQP_Gray"
                    android:background="@drawable/underline_3dp"/>

                <LinearLayout
                    android:id="@+id/menu_management"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/inventory_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="庫存盤點"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                    <TextView
                        android:id="@+id/picking_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="撿料單作業"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="40dp"
                    android:paddingBottom="2dp"
                    android:gravity="bottom|left"
                    android:text="資訊/行銷需求單"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/WQP_Gray"
                    android:background="@drawable/underline_3dp"/>

                <LinearLayout
                    android:id="@+id/menu_requisition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/requisition_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="需求申請單"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                    <TextView
                        android:id="@+id/progress_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:text="進度查詢"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue"
                        android:background="@drawable/underline_1dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="40dp"
                    android:paddingBottom="2dp"
                    android:gravity="bottom|left"
                    android:text="設定"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/WQP_Gray"
                    android:background="@drawable/underline_3dp"/>

                <LinearLayout
                    android:id="@+id/menu_setup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/version_info_txt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="版本資訊"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/WQP_Blue" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/log_out_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/WQP_Blue"
            android:text="登出"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>